extends ../layout

block scripts
    script(src="https://code.jquery.com/jquery-1.10.2.min.js")
    script(src="http://maps.google.com/maps/api/js?sensor=false&libraries=places")
    script(src="javascripts/locationpicker.jquery.js")

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 #{title}
                if msg
                    .alert.alert-danger #{msg}
                form(method='POST' action='/bar')
                    div.form-group
                        label(for='name') Name:
                        input#name.form-control(type='text', name='name', value=name)
                    div.form-group
                        label(for='description') Description:
                        input#description.form-control(type='textarea' name='description', value=description)
                    div.form-group
                        label(for='location') Address:
                        input#location.form-control(type='text' name='location', value=location)
                    button.btn.btn-primary(type='submit') Create Bar